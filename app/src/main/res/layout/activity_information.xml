<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="andres.mathhelp.views.QuizzActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info_text"/>

    <TextView
        android:drawableLeft="@mipmap/ic_linkedin_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linkedinTv"
        style="@style/clickableTextView"
        android:text="Mi perfil en LINKEDIN"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>
    <TextView
        android:id="@+id/phoneTv"
        android:drawableLeft="@mipmap/ic_contact_phone_black_24dp"
        style="@style/clickableTextView"
        android:text="+56 9 76155382"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"/>
    <fragment
        android:id="@+id/emailFragment"
        android:name="andres.mathhelp.views.EmailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â¡No dudes en contactar!"/>


</LinearLayout>
